{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "printWidth": 120,
    "trailingComma": "all",
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "tabWidth": 4,
                "parser": "solidity-parse"
            }
        }
    ],
    "plugins": ["prettier-plugin-solidity"]
}
